{
  "permissions": {
    "run-cli": {
      "env": true,
      "net": true,
      "read": ["./workflows", "./secrets.json", "./templates"],
      "write": ["./workflows", "./output"],
      "run": { "allow": ["npx"] }
    },
    "evals": {
      "env": true,
      "net": true,
      "read": [
        "./workflows",
        "./secrets.json",
        "./evals",
        "./output",
        "./templates"
      ],
      "write": ["./workflows", "./evals", "./output"],
      "run": { "allow": ["deno", "npx"] }
    },
    "test": {
      "env": true,
      "net": true,
      "read": [
        "./workflows",
        "./secrets.json",
        "./resources",
        "./src",
        "./templates"
      ],
      "write": ["./workflows", "./output"],
      "run": { "allow": ["npx"] }
    }
  },
  "tasks": {
    "corpo": "deno run -P=run-cli --env-file src/index.ts",
    "debug": "deno run -P=run-cli --inspect --env-file src/index.ts",
    "test": "deno test -P=test --env-file",
    "run": "deno task corpo run",
    "record": "deno task corpo record",
    "run-auto": "deno task corpo run-auto",
    "eval": "deno run -P=evals --env-file evals/eval_runner.ts",
    "batch-eval": "deno run -P=evals --env-file evals/batch_eval.ts",
    "serve-evals": "deno run -P=evals evals/server.ts"
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@ai-sdk/google": "npm:@ai-sdk/google@^2.0.11",
    "@ai-sdk/openai": "npm:@ai-sdk/openai@^2.0.23",
    "@ai-sdk/provider-utils": "npm:@ai-sdk/provider-utils@^3.0.7",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.17.4",
    "@openrouter/ai-sdk-provider": "npm:@openrouter/ai-sdk-provider@^1.1.2",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@std/yaml": "jsr:@std/yaml@^1.0.9",
    "ai": "npm:ai@^5.0.28",
    "commander": "npm:commander@^14.0.0",
    "xlsx-template": "npm:xlsx-template@^1.4.4",
    "xlsx": "npm:xlsx@^0.18.5",
    "zod": "npm:zod@^4.1.5"
  },
  "fmt": {
    "lineWidth": 120
  }
}
